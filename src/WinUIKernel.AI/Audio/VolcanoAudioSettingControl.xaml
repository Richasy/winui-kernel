<?xml version="1.0" encoding="utf-8" ?>
<ai:AudioServiceConfigControlBase
    x:Class="Richasy.WinUIKernel.AI.Audio.VolcanoAudioSettingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ai="using:Richasy.WinUIKernel.AI"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:Richasy.WinUIKernel.AI.Extensions"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:Richasy.WinUIKernel.AI.Audio"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <base:SettingsExpander>
        <base:SettingsExpander.Header>
            <ai:AILogo Height="24" Provider="Volcano" />
        </base:SettingsExpander.Header>
        <base:SettingsExpander.Items>
            <base:SettingsCard
                x:Name="KeyCard"
                Description="{ext:Locale Name=VolcanoSpeechAccessKeyDescription}"
                Header="{ext:Locale Name=AccessKey}">
                <PasswordBox
                    x:Name="KeyBox"
                    Width="200"
                    AutomationProperties.Name="{ext:Locale Name=AccessKey}"
                    Loaded="OnKeyBoxLoaded"
                    PasswordChanged="OnKeyBoxPasswordChanged" />
            </base:SettingsCard>
            <base:SettingsCard
                x:Name="AppIdCard"
                Description="{ext:Locale Name=VolcanoAppIdDescription}"
                Header="{ext:Locale Name=AppId}">
                <TextBox
                    x:Name="AppIdBox"
                    Width="200"
                    AutomationProperties.Name="{ext:Locale Name=AppId}"
                    PlaceholderText="{ext:Locale Name=AppId}"
                    TextChanged="OnAppIdBoxTextChanged" />
            </base:SettingsCard>
        </base:SettingsExpander.Items>
        <ic:SymbolIcon
            FontSize="14"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            IconVariant="Filled"
            Symbol="CheckmarkCircle"
            Visibility="{x:Bind ViewModel.IsCompleted, Mode=OneWay}" />
    </base:SettingsExpander>
</ai:AudioServiceConfigControlBase>
