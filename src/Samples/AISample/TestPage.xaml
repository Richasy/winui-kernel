<?xml version="1.0" encoding="utf-8" ?>
<base:LayoutPageBase
    x:Class="AISample.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ai="using:Richasy.WinUIKernel.AI"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:chat="using:Richasy.WinUIKernel.AI.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AISample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:repeater="using:Richasy.WinUIKernel.Share.Base.Repeater"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="20">
            <StackPanel.ChildrenTransitions>
                <RepositionThemeTransition IsStaggeringEnabled="False" />
            </StackPanel.ChildrenTransitions>
            <base:CardControl>
                <local:TestImage
                    Width="300"
                    Height="186"
                    DecodeHeight="206"
                    DecodeWidth="365"
                    Source="https://i2.hdslb.com/bfs/archive/db048480a486f65a45c8157a77eab93708ae092c.jpg@672w_378h_1c_!web-home-common-cover" />
            </base:CardControl>
            <StackPanel x:Name="ChatContainer">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
            </StackPanel>
            <StackPanel x:Name="AudioContainer">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
            </StackPanel>

            <StackPanel x:Name="DrawContainer">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
            </StackPanel>

            <StackPanel x:Name="TranslateContainer">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
            </StackPanel>

            <repeater:AppRepeater ItemsSource="{x:Bind TestCollection}">
                <repeater:AppRepeater.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Button
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <TextBlock Text="{x:Bind}" />
                        </Button>
                    </DataTemplate>
                </repeater:AppRepeater.ItemTemplate>
                <repeater:AppRepeater.Layout>
                    <UniformGridLayout
                        ItemsStretch="Fill"
                        MinColumnSpacing="8"
                        MinItemHeight="100"
                        MinItemWidth="100"
                        MinRowSpacing="8" />
                </repeater:AppRepeater.Layout>
            </repeater:AppRepeater>
        </StackPanel>
    </ScrollViewer>
</base:LayoutPageBase>
