<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Richasy.WinUIKernel.Share.Base.Repeater.AppRepeater"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:Richasy.WinUIKernel.Share.Extensions"
    xmlns:local="using:Richasy.WinUIKernel.Share.Base.Repeater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:ItemContentPresenterDataCollection
            x:Name="PresenterCollection"
            ContentTemplate="{x:Bind ItemTemplate, Mode=OneWay}"
            ContentTemplateSelector="{x:Bind ItemTemplateSelector, Mode=OneWay}" />
        <DataTemplate x:Name="ContentPresenterTemplate" x:DataType="local:ItemContentPresenterData">
            <ContentPresenter
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                AutomationProperties.PositionInSet="{x:Bind PositionInSet, Mode=OneWay}"
                AutomationProperties.SizeOfSet="{x:Bind SizeOfSet, Mode=OneWay}"
                Content="{x:Bind Content, Mode=OneWay}"
                ContentTemplate="{x:Bind SelectTemplate(Content), Mode=OneWay}" />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <local:AppItemsRepeater
            x:Name="Repeater"
            HorizontalAlignment="Stretch"
            ext:ItemsRepeaterExtension.SafeItemsSource="{StaticResource PresenterCollection}"
            ItemTemplate="{x:Bind GetItemTemplate(ItemContainerTemplate), Mode=OneWay}"
            Layout="{x:Bind Layout, Mode=OneWay}"
            Stretch="True"
            TabFocusNavigation="{x:Bind RepeaterTabFocusNavigation, Mode=OneWay}"
            UseLayoutRounding="True"
            VerticalCacheLength="20" />
    </Grid>
</UserControl>
